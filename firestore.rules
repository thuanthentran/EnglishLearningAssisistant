rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read/write all collections needed for Econnect
    // DEVELOPMENT RULES - Replace with stricter rules for production

    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isAuthenticated();

      // Learned words subcollection - user can only access their own learned words
      match /learned_words/{wordId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }

      // Daily learning progress subcollection - user can only access their own data
      match /daily_learning/{date} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }

      // Learning progress subcollection - user can only access their own data
      match /learning_progress/{docId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Friends collection and subcollections
    match /friends/{userId} {
      allow read, write: if isAuthenticated();

      match /user_friends/{friendId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Friend requests collection
    match /friend_requests/{requestId} {
      allow read, write: if isAuthenticated();
    }

    // Matching queue collection
    match /matching_queue/{queueId} {
      allow read, write: if isAuthenticated();
    }

    // Chat rooms collection and messages subcollection
    match /chat_rooms/{roomId} {
      allow read, write: if isAuthenticated();

      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
  }
}
